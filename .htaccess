<IfModule mod_rewrite.c>
	RewriteEngine On

	RewriteRule ^/?$ index.php [L]
	RewriteRule ^install[\/]?$ index.php?controller=install [L]
	#RewriteRule ^mdm[\/]?$ index.php?controller=page&page=mdm/home
	RewriteRule ^mdm[\/]?$ index.php?controller=mdm/index
</IfModule>

<IfModule mod_env.c>
	SetEnv _PROJECT_NAME_IDENTIFY_PARAMS "qeru"
	SetEnv _ENV "dev"
</IfModule>

# Defina o pacote “ea-php74” como a linguagem padrão de programação “PHP”.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php74 .php .php7 .phtml
</IfModule>